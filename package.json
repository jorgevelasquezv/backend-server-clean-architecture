{
    "name": "backend-server",
    "version": "1.0.0",
    "description": "Backend with Typescript for course Angular pro Devtalles",
    "main": "index.js",
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "start": "npm run build && node dist/app.js",
        "dev": "npx nodemon",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "keywords": [
        "Typescript",
        "Node",
        "Clean Architecture"
    ],
    "author": "Jorge Luis Vel√°squez",
    "license": "MIT",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.1",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "rimraf": "^6.0.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "env-var": "^7.5.0",
        "express": "^4.21.1",
        "mongoose": "^8.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./",
        "testMatch": [
            "**/src/**/*.(spec|test).ts?(x)"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageReporters": [
            "text",
            "html"
        ],
        "collectCoverageFrom": [
            "**/src/**/**/*.{ts,tsx,js,jsx}",
            "!app.ts",
            "!index.ts",
            "!dist/**"
        ],
        "coverageDirectory": "/test/.coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@application/(.*)$": "<rootDir>/src/application/$1",
            "^@domain/(.*)$": "<rootDir>/src/domain/$1",
            "^@infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
            "^@database/(.*)$": "<rootDir>/database/$1"
        }
    }
}
